<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InteractiveContactList.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="10">
            <Label Text="Interactive Contact List" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Интерактивный контактный лист" HorizontalTextAlignment="Center" FontSize="20" Padding="10,10,30,10" />
        <Label FontSize="16" Padding="0,20,0,20" HorizontalTextAlignment="Center">
            <Label.FormattedText >
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Меню управления" />
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Button
                Text="Вход в приложение" 
                Clicked="SimpleLoginPage"/>
        <Button
                Text="Регистрация" 
                Clicked="SimpleSignUpPage"/>
        <Button
                Text="Список контактов" 
                Clicked="ContactsPage"/>
        <Button
                Text="Создать проект" 
                Clicked="AddContactPage"/>
        <Button
                Text="Управление списком" 
                Clicked="ContactList"/>
    </StackLayout>

</ContentPage>
